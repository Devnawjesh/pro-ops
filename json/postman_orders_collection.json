{
  "info": {
    "name": "Sales Orders API",
    "_postman_id": "c2cf3b4a-5d3e-4c4b-bb1a-3cf5de9bd999",
    "description": "Orders lifecycle: Draft -> Submit -> Approve/Reject",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "PASTE_JWT_HERE" },
    { "key": "orderId", "value": "1" }
  ],
  "item": [
    {
      "name": "Create Draft Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"order_date\": \"2026-01-17\",\n  \"outlet_id\": \"10\",\n  \"distributor_id\": \"6\",\n  \"remarks\": \"Draft order from rep\",\n  \"lines\": [\n    { \"sku_id\": \"1\", \"qty\": \"10\" },\n    { \"sku_id\": \"2\", \"qty\": \"5\" }\n  ]\n}"
        }
      }
    },
    {
      "name": "Update Draft Order (replace lines)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders", "{{orderId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"order_date\": \"2026-01-17\",\n  \"outlet_id\": \"10\",\n  \"distributor_id\": \"6\",\n  \"remarks\": \"Updated draft\",\n  \"lines\": [\n    { \"sku_id\": \"1\", \"qty\": \"12\" },\n    { \"sku_id\": \"3\", \"qty\": \"2\" }\n  ]\n}"
        }
      }
    },
    {
      "name": "Submit Order (DRAFT -> SUBMITTED)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders/{{orderId}}/submit",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders", "{{orderId}}", "submit"]
        }
      }
    },
    {
      "name": "Approve Order (SUBMITTED -> APPROVED + reserve stock)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders/{{orderId}}/approve",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders", "{{orderId}}", "approve"]
        }
      }
    },
    {
      "name": "Reject Order (SUBMITTED -> REJECTED)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders/{{orderId}}/reject",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders", "{{orderId}}", "reject"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"Credit limit exceeded\"\n}"
        }
      }
    },
    {
      "name": "Get Order Details",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders", "{{orderId}}"]
        }
      }
    },
    {
      "name": "List Orders",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/sales/orders?page=1&limit=50&status=2&from_date=2026-01-01&to_date=2026-01-31&q=SO-",
          "host": ["{{baseUrl}}"],
          "path": ["sales", "orders"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "50" },
            { "key": "status", "value": "2" },
            { "key": "from_date", "value": "2026-01-01" },
            { "key": "to_date", "value": "2026-01-31" },
            { "key": "q", "value": "SO-" }
          ]
        }
      }
    }
  ]
}
